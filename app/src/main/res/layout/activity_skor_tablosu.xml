<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/harita_background"
    android:padding="16dp"
    tools:context=".SkorTablosuActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/button_cekılıs"
        android:layout_width="177dp"
        android:layout_height="55dp"
        android:background="@drawable/secenek"
        android:fontFamily="@font/buton_font"
        android:gravity="center"
        android:onClick="cekk"
        android:text=" ÇEKİLİŞE  KATIL"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.722"
        app:layout_constraintStart_toEndOf="@+id/button1"
        app:layout_constraintTop_toTopOf="@+id/button1"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_en_kullanıcı_adı"
        android:layout_width="232dp"
        android:layout_height="53dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/secenek"
        android:fontFamily="@font/buton_font"
        android:gravity="center"
        android:text="-----"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/button1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.989"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/puan_5"
        app:layout_constraintVertical_bias="0.318"
        tools:text="İsim" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_en_isim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/buton_font"
        android:text="Kullanıcı Adı:"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/button1"
        app:layout_constraintEnd_toStartOf="@+id/tv_en_kullanıcı_adı"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/puan_5"
        app:layout_constraintVertical_bias="0.345" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tv_sonuclar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/sonuclar_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_en_yuksek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/buton_font"
        android:text="En Yüksek Skorun"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_sonuclar" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_en_yuksek_puan"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/secenek"
        android:fontFamily="@font/buton_font"
        android:gravity="center"
        android:text="-----"
        android:textColor="@color/black"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_en_yuksek"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_en_yuksek"
        app:layout_constraintTop_toTopOf="@+id/tv_en_yuksek"
        tools:text="30 Puan" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_sira_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/buton_font"
        android:text="1."
        android:textColor="@color/white"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_en_yuksek_puan" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/puan_1"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="24dp"
        android:background="@drawable/secenek"
        android:fontFamily="@font/buton_font"
        android:gravity="center"
        android:text="-----"
        android:textColor="@color/black"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_sira_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_sira_1"
        app:layout_constraintTop_toTopOf="@+id/tv_sira_1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_sira_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/buton_font"
        android:text="2."
        android:textColor="@color/white"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/puan_1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/puan_2"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/secenek"
        android:fontFamily="@font/buton_font"
        android:gravity="center"
        android:text="-----"
        android:textColor="@color/black"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_sira_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/puan_1"
        app:layout_constraintTop_toTopOf="@+id/tv_sira_2" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_sira_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/buton_font"
        android:text="3."
        android:textColor="@color/white"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/puan_2" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/puan_3"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="24dp"

        android:background="@drawable/secenek"
        android:fontFamily="@font/buton_font"
        android:gravity="center"
        android:text="-----"
        android:textColor="@color/black"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_sira_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_sira_3"
        app:layout_constraintStart_toStartOf="@+id/puan_1"
        app:layout_constraintTop_toTopOf="@+id/tv_sira_3" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_sira_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/buton_font"
        android:text="4."
        android:textColor="@color/white"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/puan_3" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/puan_4"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/secenek"
        android:fontFamily="@font/buton_font"
        android:gravity="center"
        android:text="-----"
        android:textColor="@color/black"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_sira_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/puan_1"
        app:layout_constraintTop_toTopOf="@+id/tv_sira_4" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_sira_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/buton_font"
        android:text="5."
        android:textColor="@color/white"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/puan_4" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/puan_5"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/secenek"
        android:fontFamily="@font/buton_font"
        android:gravity="center"
        android:text="-----"
        android:textColor="@color/black"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_sira_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/puan_1"
        app:layout_constraintTop_toTopOf="@+id/tv_sira_5" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/button1"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/secenek"
        android:drawableStart="@drawable/ic_back"
        android:drawablePadding="16dp"
        android:drawableTint="@color/black"
        android:fontFamily="@font/buton_font"
        android:gravity="start|center_vertical"
        android:onClick="geriDon"
        android:paddingStart="24dp"
        android:text="ANA MENÜ"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="RtlSymmetry"
        tools:targetApi="m"
        tools:visibility="visible" />


</androidx.constraintlayout.widget.ConstraintLayout>